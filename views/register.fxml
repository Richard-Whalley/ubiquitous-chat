<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.scene.text.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<GridPane xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="fxchat.controllers.RegisterController">
    <columnConstraints>
        <ColumnConstraints hgrow="SOMETIMES" />
    </columnConstraints>
    <rowConstraints>
        <RowConstraints maxHeight="257.0" minHeight="10.0" prefHeight="40.0" vgrow="SOMETIMES" />
        <RowConstraints maxHeight="196.0" minHeight="0.0" prefHeight="48.0" vgrow="SOMETIMES" />
        <RowConstraints maxHeight="148.0" minHeight="0.0" prefHeight="49.0" vgrow="SOMETIMES" />
      <RowConstraints maxHeight="148.0" minHeight="10.0" prefHeight="49.0" vgrow="SOMETIMES" />
        <RowConstraints maxHeight="204.0" minHeight="10.0" prefHeight="57.0" vgrow="SOMETIMES" />
        <RowConstraints maxHeight="204.0" minHeight="10.0" prefHeight="57.0" vgrow="SOMETIMES" />
    </rowConstraints>
    <children>
        <HBox alignment="CENTER" GridPane.rowIndex="1">
            <children>
                <Label alignment="CENTER_RIGHT" text="Username:">
                    <HBox.margin>
                        <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
                    </HBox.margin>
                </Label>
                <TextField fx:id="username" promptText="Username" GridPane.rowIndex="1">
                    <GridPane.margin>
                        <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
                    </GridPane.margin>
                </TextField>
            </children>
            <GridPane.margin>
                <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
            </GridPane.margin>
        </HBox>
        <HBox alignment="CENTER">
            <children>
                <Label alignment="CENTER" text="Chat: Register">
                    <GridPane.margin>
                        <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
                    </GridPane.margin>
                    <font>
                        <Font name="System Bold" size="18.0" />
                    </font>
                    <HBox.margin>
                        <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
                    </HBox.margin>
                    <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                    </padding>
                </Label>
            </children>
        </HBox>
        <HBox alignment="CENTER" GridPane.rowIndex="2">
            <children>
                <Label alignment="CENTER_RIGHT" text="Password:">
                    <HBox.margin>
                        <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
                    </HBox.margin>
                </Label>
                <PasswordField fx:id="password" promptText="Password" GridPane.rowIndex="2">
                    <GridPane.margin>
                        <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
                    </GridPane.margin>
                </PasswordField>
            </children>
        </HBox>
        <HBox alignment="CENTER" layoutX="10.0" layoutY="98.0" GridPane.rowIndex="3">
            <children>
                <Label alignment="CENTER_RIGHT" text="  Confirm:">
                    <HBox.margin>
                        <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
                    </HBox.margin>
                </Label>
                <PasswordField fx:id="password_confirm" promptText="Confirm Password" GridPane.rowIndex="2">
                    <GridPane.margin>
                        <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
                    </GridPane.margin>
                </PasswordField>
            </children>
        </HBox>
        <HBox alignment="CENTER" GridPane.rowIndex="4">
            <children>
                <Button alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false" onAction="#switchContextLogin" text="Login">
                    <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                    </padding>
                    <HBox.margin>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                    </HBox.margin>
                </Button>
                <Button defaultButton="true" mnemonicParsing="false" onAction="#handleRegisterSubmit" text="Register">
                    <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                    </padding>
                    <HBox.margin>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                    </HBox.margin>
                </Button>
            </children>
        </HBox>
        <HBox alignment="CENTER" GridPane.rowIndex="5">
            <children>
                <Text fx:id="statusText" strokeType="OUTSIDE" strokeWidth="0.0" />
            </children>
        </HBox>
    </children>
</GridPane>
